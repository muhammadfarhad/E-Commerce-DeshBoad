<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".Profile">

    <RelativeLayout
        android:padding="20dp"
        android:layout_weight="2"
        android:background="@color/colorsuccess"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:layout_centerVertical="true"
            android:tint="@color/colorRed"
            android:id="@+id/profileimageheader"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/casmatic" />
        <TextView
            android:includeFontPadding="false"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="Muhammad Farhad"
            android:layout_toRightOf="@+id/profileimageheader"
            android:fontFamily="@font/bungee"
            android:textSize="20sp"
            android:id="@+id/profiletextheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:includeFontPadding="false"
            android:fontFamily="@font/aclonica"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/profileimageheader"
            android:layout_below="@+id/profiletextheader"
            android:id="@+id/salgonprofiletextheader"
            android:text="Company Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="-90dp"
        android:padding="20dp"
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="5dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/colorsuccess"
            android:layout_width="0dp"
            android:layout_height="120dp">
            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:tint="@color/black"
                    android:layout_centerHorizontal="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="?attr/actionModePasteDrawable" />
                <TextView
                    android:id="@+id/payment_lable"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/bungee"
                    android:textSize="20sp"
                    android:text="$786"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/payment_disc"
                    android:layout_centerHorizontal="true"
                    android:includeFontPadding="false"
                    android:textSize="14sp"
                    android:text="Balance"
                    android:layout_below="@id/payment_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="5dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/colorsuccess"
            android:layout_width="0dp"
            android:layout_height="120dp">
            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:tint="@color/black"
                    app:srcCompat="@android:drawable/ic_input_get" />
                <TextView
                    android:id="@+id/booking_lable"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/bungee"
                    android:textSize="20sp"
                    android:text="12"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/booking_disc"
                    android:layout_centerHorizontal="true"
                    android:includeFontPadding="false"
                    android:textSize="14sp"
                    android:text="Booking"
                    android:layout_below="@id/booking_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <com.google.android.material.textfield.TextInputLayout
            android:hint="Full Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Muhammad Farhad"
                android:drawableLeft="@drawable/username"
                android:drawablePadding="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="farhadraj678@gmail.com"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="5dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:hint="Phone No"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/phoneno"
                android:drawablePadding="10dp"
                android:text="0333-616-0316" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1234567abcde"
                android:drawableLeft="@drawable/signout"
                android:drawablePadding="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:background="@color/colorsuccess"
            android:fontFamily="@font/bungee"
            android:text="Update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>